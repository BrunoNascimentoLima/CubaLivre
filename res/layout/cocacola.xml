<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.41"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txvCoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite a quantidade(ml) de Coca-cola:" />

        <EditText
            android:id="@+id/txtCoca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/txvRunCoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite a quantidade(ml) de Run:" />

        <EditText
            android:id="@+id/txtRunCoca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txvGeloCoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite a quantidade(ml) de Gelo:" />

        <EditText
            android:id="@+id/txtGeloCoca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnPaladarCoca"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:onClick="PaladarCocaClick"
            android:text="Calcular Paladar" />

    </LinearLayout>

</LinearLayout>