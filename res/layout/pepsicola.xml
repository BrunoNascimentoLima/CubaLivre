<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txvPepsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite a quantidade(ml) de Pepsi-cola:" />

        <EditText
            android:id="@+id/txtPepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txvRunPepsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite a quantidade(ml) de Run:" />

        <EditText
            android:id="@+id/txtRunPepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txvGeloPepsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite quantidade(ml) de Gelo:" />

        <EditText
            android:id="@+id/txtGeloPepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <Button
        android:id="@+id/btnPaladarPepsi"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:onClick="PaladarPepsiClick"
        android:text="Calcular Paladar" />

</LinearLayout>
